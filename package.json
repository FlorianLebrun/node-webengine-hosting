{
  "name": "node-webengine-hosting",
  "version": "0.0.6",
  "main": "dist/lib/index.js",
  "private": true,
  "gypfile": true,
  "dependencies": {
    "bindings": "~1.2.1",
    "debug": "^2.2.0",
    "http-proxy": "^1.17.0",
    "nan": "^2.0.0",
    "ws": "^5.1.1"
  },
  "devDependencies": {
    "babel-cli": "^6.11.4",
    "babel-eslint": "^7.2.3",
    "babel-plugin-module-resolver": "^2.3.0",
    "babel-plugin-syntax-dynamic-import": "^6.18.0",
    "babel-plugin-syntax-object-rest-spread": "^6.13.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-imports": "^1.4.0",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-es2016": "^6.24.1",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-minify": "^0.2.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.11.0",
    "babel-register": "^6.11.6",
    "babel-register-cli": "^4.0.0",
    "babel-watch": "^2.0.7",
    "eslint": "4.10.0",
    "eslint-config-react-app": "^2.0.1",
    "eslint-loader": "1.9.0",
    "eslint-plugin-flowtype": "2.39.1",
    "eslint-plugin-import": "2.8.0",
    "eslint-plugin-jsx-a11y": "5.1.1",
    "eslint-plugin-react": "7.4.0",
    "body-parser": "^1.18.2",
    "express": "^4.16.3",
    "node-gyp": "^3.6.2",
    "nodemon": "^1.17.3"
  },
  "babel": {
    "presets": [
      "flow",
      [
        "env",
        {
          "loose": true,
          "targets": {
            "node": "current"
          }
        }
      ]
    ],
    "plugins": [
      [
        "module-resolver",
        {
          "alias": {
            "@common": "./src/common",
            "@lib": "./src"
          }
        }
      ],
      "syntax-dynamic-import",
      "syntax-object-rest-spread",
      "transform-class-properties",
      "transform-decorators-legacy",
      "transform-object-rest-spread",
      "transform-imports"
    ]
  },
  "eslintConfig": {
    "extends": "react-app",
    "rules": {
      "jsx-a11y/href-no-hash": 0,
      "default-case": 0,
      "no-fallthrough": 0
    }
  },
  "scripts": {
    "start": "set PORT=1418 && nodemon --watch src --exec npm run debug",
    "debug": "babel src -d dist --source-maps && babel-node src/test/test --source-maps --inspect",
    "build": "node-gyp rebuild && babel src -d dist",
    "build:cpp": "node-gyp rebuild",
    "build:js": "babel src -d dist",
    "pack": "npm run build && npm pack",
    "patch-system": "babel-node src/test/patch-system --source-maps"
  }
}
